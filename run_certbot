#!/bin/bash
source .config

# Make sure the well known path exists
if [ ! -d $CERTBOT_WELL_KNOWN_PATH ]
then 
    mkdir -p $CERTBOT_WELL_KNOWN_PATH
fi

certbot certonly --webroot $@ $CERTBOT_PARAMS -w $CERTBOT_WELL_KNOWN_PATH -d $SERVER_NAME
certbot certonly --webroot $@ $CERTBOT_PARAMS -w $CERTBOT_WELL_KNOWN_PATH -d $TDRZ_DATA_SUBDOMAIN.$SERVER_NAME

