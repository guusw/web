
#!/bin/bash

function failure()
{
    echo "Usage: run <start|stop|restart>"
    exit 1
}

if [[ "$#" -lt 1 ]]
then
    echo "not enough arguments provided $#, expected at least 1"
    failure
fi 

MyPath=`dirname $0`
source $MyPath/.config
$MyPath/run_php $1
$MyPath/run_mysqld $1
$MyPath/run_nginx $1

